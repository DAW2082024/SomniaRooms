{# templates/admin/room_availability/category_view.html.twig #}
{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title 'Room Availability' %}
{% block main %}
<div>
    <h3>{{categoryData.name}}</h3>
</div>
<table class="datagrid">
    <thead>
        <tr>
            <td>Day</td>
            <td>Amount</td>
        </tr>
    </thead>
    <tbody>
        {% for availability in availabilityList %}
        <tr>
            <td>{{availability.day |date('d-m-Y')}}</td>
            <td>{{availability.numAvailable}}</td>
            <td>
                <a href="{{ ea_url().setRoute('admin_roomAvailability_category_update', { day: availability.day |date('Y-m-d'), categoryId: categoryData.id }) }}">
                    Edit
                </a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}